<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.test_mnist_myself.MainActivity"
    android:layout_gravity="center">

    <com.example.test_mnist_myself.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/paintView"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="-255dp"
        android:layout_toEndOf="@+id/button2"
        android:text="Clear"
        android:onClick="doSomething"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paintView"
        android:layout_alignStart="@+id/paintView"
        android:layout_marginStart="88dp"
        android:layout_marginTop="208dp"
        android:text="Detect"
        android:onClick="doSomething"/>

    <ImageView
        android:id="@+id/iV"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@id/paintView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="131dp"
        android:foregroundGravity="center"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="TextView" />

    </LinearLayout>


</RelativeLayout>
